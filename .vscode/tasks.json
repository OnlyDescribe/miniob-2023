{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceFolder}/build_debug"
    },
    "tasks": [
        {
            "label": "cmake",
            "command": "cmake",
            "args": [
                "-DDEBUG=ON",
                ".."
            ]
        },
        {
            "label": "make",
            "command": "make",
            "args": [
                "-j4"
            ]
        },
        {
            "label": "CMake Build",
            "dependsOn": [
                "cmake",
                "make"
            ]
        },
        {
            "label": "init",
            "type": "shell",
            "command": "sudo -E env PATH=$PATH bash ${workspaceFolder}/build.sh init"
        },
        {
            "label": "build_debug",
            "type": "shell",
            "command": "bash build.sh debug",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build_release",
            "type": "shell",
            "command": "bash build.sh release"
        },
        {
            "label": "gen_parser",
            "type": "shell",
            "command": "cd ${workspaceFolder}/src/observer/sql/parser && bash gen_parser.sh"
        }, 
        {
            "label": "test",
            "type": "shell",
            "command": "cat ${workspaceFolder}/test.sql | ${workspaceFolder}/build_debug/bin/observer -f ${workspaceFolder}/etc/observer.ini -P cli"
        },
    ]
}
